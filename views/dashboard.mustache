<!DOCTYPE html>
<html>

<head>
    <title> Med App </title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.0.0-alpha1/css/bootstrap.min.css"
        integrity="sha384-r4NyP46KrjDleawBgD5tp8Y7UzmLA05oM1iAEQ17CSuDqnUK2+k9luXQOfXJCJ4I" crossorigin="anonymous">

    <link rel="stylesheet" type="text/css" href="/dashstyle.css">
</head>

<body>

    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <h1> Dashboard </h1>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">

                <div class="card">
                    <div class="card-header">
                        Stats
                    </div>

                    <div class="card-body">
                        <table class="table table-dark">
                            <tr>
                                <td>Total Stock </td>
                                <td> Total Brands </td>

                            </tr>
                            <tr>
                                {{#n1}}<td> {{sum}} </td> {{/n1}}
                                {{#n2}} <td> {{count}} </td> {{/n2}}
                            </tr>
                        </table>
                    </div>
                </div>
            </div>

        </div>


        <div class="row">
            <div class="col-md-12">

                <div class="card">
                    <div class="card-header">
                        Navigator
                    </div>

                    <div class="card-body">
                        <a href="/add" class="btn btn-primary"> Add Medicine </a>
                        <a class="btn btn-primary"> Edit Medicine </a>
                        <a href="/meds" class="btn btn-primary"> Medicine List </a>
                        <a class="btn btn-primary"> View Medicine </a>
                    </div>
                </div>
            </div>

        </div>

        <!--
    {{#n1}}
        <h1> {{sum}} </h1>
    {{/n1}}

    
    {{#n2}}
        <h1> {{count}} </h1>
    {{/n2}}

    -->
</body>

</html>